<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutStagramUploadActivity"

    >

    <EditText
        android:id="@+id/content_input"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="내용을 작성해주세요" />

    <TextView
        android:id="@+id/select_picture"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="사진 선택"
        android:textSize="30dp"
        android:background="#D661EA"
        android:textColor="#ffffff"
        android:layout_marginTop="320dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/upload_post"
        android:layout_below="@id/select_picture"
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="업로드"
        android:textSize="30dp"
        android:background="#D661EA"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/all_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="전체"
            android:gravity="center"
            android:background="#E34337"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/my_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="본인"
            android:gravity="center"
            android:background="#F89D18"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="업로드"
            android:gravity="center"
            android:background="#FFEB3B"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/user_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="정보"
            android:gravity="center"
            android:background="#4CAF50"
            android:textColor="#ffffff"
            />

    </LinearLayout>


</RelativeLayout>
